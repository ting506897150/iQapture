    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_generate"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_generatetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="24px"
            android:background="@drawable/edit_bg"
            android:id="@+id/text_generate"
            android:paddingLeft="20px"
            android:layout_width="match_parent"
            android:layout_height="192px"
            android:textColor="@color/left"
            android:textColorHint="@color/right"
            android:gravity="top"
            android:textSize="48px"/>
    </com.zhy.autolayout.AutoLinearLayout>
