<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--多行文本输入框-->
    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:id="@+id/layout_moreedit"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_moreedittitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="24px"
            android:background="@drawable/edit_bg"
            android:id="@+id/edit_multiline"
            android:paddingLeft="20px"
            android:layout_width="match_parent"
            android:layout_height="192px"
            android:textColor="@color/left"
            android:textColorHint="@color/right"
            android:gravity="top"
            android:textSize="48px"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--下拉框-->
    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_spinner"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_spinnertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="24px"
            android:background="@drawable/edit_bg"
            android:paddingLeft="20px"
            android:gravity="center_vertical"
            android:paddingRight="20px"
            android:textSize="48px"
            android:textColor="@color/left"
            android:id="@+id/spinner_down"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:drawableRight="@mipmap/down" />
    </com.zhy.autolayout.AutoLinearLayout>
    <!--时间选择-->
    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_date"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_datetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_marginTop="24px"
            android:background="@drawable/layout_bg"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:background="@drawable/edit_bg"
                android:paddingLeft="24px"
                android:gravity="center_vertical"
                android:text="xxxxxxxxxxxxxxxxx"
                android:id="@+id/text_datetime"
                android:layout_toLeftOf="@+id/image_date"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_marginLeft="48px"
                android:layout_marginRight="48px"
                android:id="@+id/image_date"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/data"
                android:layout_width="50px"
                android:layout_height="50px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--单行输入框-->
    <com.zhy.autolayout.AutoLinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_edit"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_edittitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:imeOptions="actionDone"
            android:background="@drawable/edit_bg"
            android:layout_marginTop="24px"
            android:id="@+id/edit_single"
            android:paddingLeft="20px"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:singleLine="true"
            android:textColor="@color/left"
            android:textColorHint="@color/right"
            android:textSize="48px"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--货币输入框-->
    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_money"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_moneytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="24px"
            android:background="@drawable/edit_bg"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/hb"
                android:textColor="@color/divider_gray"
                android:gravity="center"
                android:textSize="48px"
                android:hint="£"
                android:layout_width="50px"
                android:layout_height="match_parent" />
            <EditText
                android:layout_toRightOf="@+id/hb"
                android:id="@+id/edit_money"
                android:paddingLeft="20px"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:textColor="@color/left"
                android:textColorHint="@color/right"
                android:textSize="48px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--百分比输入框-->
    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_percent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_percenttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="24px"
            android:background="@drawable/edit_bg"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:gravity="center_vertical">
            <EditText
                android:layout_toLeftOf="@+id/bfb"
                android:id="@+id/edit_percent"
                android:paddingLeft="20px"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:textColor="@color/left"
                android:textColorHint="@color/right"
                android:textSize="48px"/>
            <TextView
                android:id="@+id/bfb"
                android:textColor="@color/divider_gray"
                android:gravity="center"
                android:textSize="48px"
                android:hint="%"
                android:layout_alignParentRight="true"
                android:layout_width="50px"
                android:layout_height="match_parent" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--Float输入框-->
    <com.zhy.autolayout.AutoLinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_float"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_floattitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="24px"
            android:background="@drawable/edit_bg"
            android:id="@+id/edit_float"
            android:paddingLeft="20px"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:singleLine="true"
            android:textColor="@color/left"
            android:textColorHint="@color/right"
            android:textSize="48px"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--Number输入框-->
    <com.zhy.autolayout.AutoLinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_number"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_numbertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="24px"
            android:background="@drawable/edit_bg"
            android:id="@+id/edit_number"
            android:paddingLeft="20px"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:singleLine="true"
            android:textColor="@color/left"
            android:textColorHint="@color/right"
            android:textSize="48px"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--Integer输入框-->
    <com.zhy.autolayout.AutoLinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_integer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_integertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="24px"
            android:background="@drawable/edit_bg"
            android:id="@+id/edit_integer"
            android:paddingLeft="20px"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:singleLine="true"
            android:textColor="@color/left"
            android:textColorHint="@color/right"
            android:textSize="48px"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--AutoID-->
    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_autoid"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_autoidtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_marginTop="24px"
            android:background="@drawable/edit_bg"
            android:ellipsize="end"
            android:id="@+id/text_autoid"
            android:paddingLeft="20px"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:singleLine="true"
            android:textColor="@color/left"
            android:textSize="48px"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--Label-->
    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_label"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_labeltitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_marginTop="24px"
            android:background="@drawable/edit_bg"
            android:ellipsize="end"
            android:id="@+id/text_label"
            android:paddingLeft="20px"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:singleLine="true"
            android:textColor="@color/left"
            android:textSize="48px"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--单选-->
    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_radiobutton"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_radiobuttontitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_radiobutton"
            android:layout_marginTop="24px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--多选-->
    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_checkbox"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_checkboxtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_checkbox"
            android:background="@drawable/bg_server"
            android:layout_marginTop="24px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--SeekBar-->
    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_seekbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_seekbartitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="24px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="5px"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:background="@drawable/edit_bg"
                android:id="@+id/text_seekbarnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text_seekbarnum"
                style="@android:style/Widget.Holo.SeekBar"
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="96px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--图片上传-->
    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_imageupload"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_imageuploadtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <!--展示上传的图片-->
        <com.example.vcserver.iqapture.util.MyGridView
            android:id="@+id/gridview_imageupload"
            android:numColumns="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--Activity-->
    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_activity"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_activitytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_marginTop="24px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:background="@drawable/edit_login"
                android:scaleType="centerCrop"
                android:src="@mipmap/activity"
                android:gravity="center"
                android:id="@+id/btn_activity"
                android:layout_width="96px"
                android:layout_height="96px"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginTop="24px"
                android:layout_below="@+id/btn_activity"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone"
                android:id="@+id/layout_activitydescription"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Description"
                    android:id="@+id/text_descriptiontitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_marginTop="24px"
                    android:background="@drawable/edit_bg"
                    android:id="@+id/edit_description"
                    android:paddingLeft="20px"
                    android:layout_width="match_parent"
                    android:layout_height="192px"
                    android:textColor="@color/left"
                    android:textColorHint="@color/right"
                    android:gravity="top"
                    android:textSize="48px"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginTop="20px"
                android:visibility="gone"
                android:id="@+id/rlayout_activitydate"
                android:layout_below="@+id/layout_activitydescription"
                android:layout_marginRight="20px"
                android:layout_width="wrap_content"
                android:layout_height="96px">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/text_activitydatename"
                    android:text="Target Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:drawableRight="@mipmap/data"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/edit_bg"
                    android:layout_toRightOf="@+id/text_activitydatename"
                    android:singleLine="true"
                    android:maxLength="10"
                    android:gravity="center_vertical"
                    android:id="@+id/text_activitydatetime"
                    android:layout_toLeftOf="@+id/iamge_date"
                    android:layout_width="440px"
                    android:layout_height="match_parent"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginTop="20px"
                android:visibility="gone"
                android:id="@+id/rlayout_activitypeople"
                android:gravity="center_vertical"
                android:layout_below="@+id/rlayout_activitydate"
                android:layout_width="wrap_content"
                android:layout_height="96px">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/text_activitypeopleame"
                    android:text="People"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginLeft="10px"
                    android:layout_centerVertical="true"
                    android:id="@+id/image_activitypeople"
                    android:layout_toRightOf="@+id/text_activitypeopleame"
                    android:src="@mipmap/user"
                    android:layout_width="72px"
                    android:layout_height="72px"/>
                <TextView
                    android:layout_toRightOf="@+id/image_activitypeople"
                    android:singleLine="true"
                    android:id="@+id/text_activitypeoplename"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:textColor="@color/left"
                    android:gravity="center"
                    android:layout_width="440px"
                    android:layout_height="match_parent"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_below="@+id/rlayout_activitypeople"
                android:layout_marginTop="24px"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone"
                android:id="@+id/layout_activitycomment"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Comment"
                    android:id="@+id/text_commenttitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_marginTop="24px"
                    android:background="@drawable/edit_bg"
                    android:id="@+id/edit_comment"
                    android:paddingLeft="20px"
                    android:layout_width="match_parent"
                    android:layout_height="192px"
                    android:textColor="@color/left"
                    android:textColorHint="@color/right"
                    android:gravity="top"
                    android:textSize="48px"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--Table-->
    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_table"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_toLeftOf="@+id/image_add"
                android:layout_alignParentLeft="true"
                android:id="@+id/text_tabletitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:visibility="visible"
                android:id="@+id/image_add"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/add"
                android:layout_width="50px"
                android:layout_height="50px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:layout_marginTop="20px"
            android:id="@+id/recyclerview_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--ExpandableListView-->
    <com.zhy.autolayout.AutoLinearLayout
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/layout_group"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120px">
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rlayout_group"
            android:paddingLeft="24px"
            android:paddingRight="24px"
            android:background="@drawable/edit_bg"
            android:layout_width="match_parent"
            android:layout_height="96px">
            <TextView
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/label_expand_group"
                android:textColor="@color/blue"
                android:textSize="56px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/expanded"
                android:src="@mipmap/up"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="50px"
                android:layout_height="50px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--Properties -->
    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="24px"
        android:paddingBottom="24px"
        android:visibility="gone"
        android:id="@+id/layout_properties"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_propertiestitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginTop="10px"
            android:ellipsize="end"
            android:id="@+id/text_properties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/left"
            android:textSize="36px"/>
    </com.zhy.autolayout.AutoLinearLayout>
